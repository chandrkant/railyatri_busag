        <% if @img_url[:point_to_url].present? %>
          <a href="<%=@img_url[:point_to_url]%>"><%= image_tag('http://images.railyatri.in'+@img_url[:url], :alt => 'Food Marketing image',class: 'img-responsive') %></a>
        <% else %>
