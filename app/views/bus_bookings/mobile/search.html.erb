  <div class="container-fluid bgclr-wht marg-top-15 ry-tile card-margin">
    <div class="row">
      <div class="bus-search-block">
        <form action = "<%=m_bus_list_bus_bookings_path%>" method="post" name="bus_search" id = "bus_search_form">
